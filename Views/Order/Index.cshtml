@model Order_Board.ViewModels.OrderModel

<h2>Создание заказа</h2>
 
<form asp-action="Create" asp-controller="Order" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Name">Введите название</label><br />
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="Description">Введите описание</label><br />
            <input type="text" asp-for="Description" />
            <span asp-validation-for="Description" />
        </div>
        <div>
            <label asp-for="Price">Введите цену</label><br />
            <input type="text" asp-for="Price" />
            <span asp-validation-for="Price" />
        </div>
        <div>
            <input type="submit" value="Создать" />
        </div>
    </div>
</form>